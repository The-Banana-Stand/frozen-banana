<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <div class="page-header">
      <h1 class="text-center">Registration</h1>
    </div>

    <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name),
                        html: {class: 'form-horizontal'}, wrapper: :horizontal_form,
                        wrapper_mappings: {radio_buttons: :horizontal_radio_and_checkboxes} do |f| %>

        <%= f.error_notification %>
        <%= f.hidden_field :role, value: 'dm' %>
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.input :email, required: true, autofocus: true, placeholder: 'Email Address' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <%= f.input :password_confirmation, required: true, placeholder: 'Must match password' %>
          </div>
        </div>

        <%= render partial: 'users/partials/general_form', locals: {f: f} %>

        <div class="well col-md-4 col-md-offset-4">
          <p>
            By signing up for MeetingSlice, you agree to our <%= link_to 'Terms', terms_of_service_path %>
            and that you have read our <%= link_to 'Privacy Policy', privacy_policy_path %>
          </p>
        </div>

        <%= f.submit 'Complete Registration', class: 'btn btn-primary col-md-4 col-md-offset-4' %>

    <% end %>


  </div>
</div>


<div class="row text-center">
  <%= render "devise/shared/links" %>
</div>


