  <!--promo-->


  <div class="row-container">
    <div class="row step-container">
      <h1 class="steps-heading"><strong>How It Works</strong></h1>
      <div class="col-md-2 col-md-offset-1">
        <%= image_tag('splash_page/search.png', class: 'step-image') %>
        <h3> <strong>Step 1:</strong></h3>
        <p>Search for Decision Makers</p>
      </div>
      <div class="col-md-2">
        <%= image_tag('splash_page/book_now.png', class: 'step-image') %>
        <h3> <strong>Step 2:</strong></h3>
        <p>Purchase an hour-long meeting</p>
      </div>
      <div class="col-md-2">
        <%= image_tag('splash_page/dollar-sign.png', class: 'step-image') %>
        <h3><span class="glyphicon glyphicon-arrow-right"></span></h3>
        <p>Meeting price is paid to the business</p>
      </div>
      <div class="col-md-2">
        <%= image_tag('splash_page/meet.png', class: 'step-image') %>
        <h3> <strong>Step 3:</strong></h3>
        <p>Introduce your product to a fully attentive audience</p>
      </div>
      <div class="col-md-2">
        <%= image_tag('splash_page/rate.png', class: 'step-image') %>
        <h3> <strong>Step 4:</strong></h3>
        <p>Rate the quality of the meeting</p>
      </div>
    </div>
    <!--step-container-->
  </div>


  <div id="row-container-2" class="row-container">
    <div class="row">
      <div class="col-md-6 section-picture"></div>
      <div class="col-md-6 row-content">
        <div class="floating-text">
          <h1><strong>Stop Cold Calling. Meet Now.</strong></h1>
          <ul class="list-unstyled">
            <li>Sell more, faster</li>
            <li>Higher quality attention</li>
            <li>Predictable meeting length</li>
            <li>Guaranteed meeting start time</li>
            <li>Get to the right person</li>
          </ul>
        </div>
      </div>
    </div>
  </div>


  <div id="row-container-1" class="row-container">
    <div class="row">
      <div class="col-md-6 row-content">
        <div class="floating-text">
          <h1><strong>The Clearest Signal.</strong></h1>
          <p>
            Money is skin in the game.  Businesses know the best salespeople are so confident in their product's performance that they are willing to pay
            to get in front of the correct Decision Maker RIGHT NOW!
          </p>
        </div>
      </div>
      <div class="col-md-6 section-picture"></div>
    </div>
  </div>
  <!--container-1-->
  <div class="row padding-top">
    <div class="col-md-12">
      <%= link_to 'Register Now', signup_path, class: 'btn btn-primary btn-lg' %>
