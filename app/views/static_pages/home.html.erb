          <h4><strong>CEO</strong></h4>
          <h4><strong>Davidson Manufacturing</strong></h4>
          <h4><strong>Price/Hr: <%= link_to('Register', signup_path, class: 'btn btn-primary btn-sm text-bold') %></strong></h4>
        </div>
        <div class="col-md-2 col-md-offset-1 well dm-highlight"><%= image_tag('splash_page/profile-2.png', class: 'img-responsive dm-image') %>
          <h4><strong>Ryan Barber</strong></h4>
          <h4><strong>Operations Manager</strong></h4>
          <h4><strong>Freetown Distribution</strong></h4>
          <h4><strong>Price/Hr: <%= link_to('Register', signup_path, class: 'btn btn-primary btn-sm text-bold') %></strong></h4>
