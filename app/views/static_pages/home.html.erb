<div class="text-center">

  <div class="row">
    <div class="promo">
      <div class="jumbotron">

        <div class="col-md-8">
          <!--<div class="row">-->
            <!--<div class="col-md-5 col-md-offset-1">-->
              <!--<%= image_tag 'http://via.placeholder.com/400x450', class: 'img img-responsive' %>-->
            <!--</div>-->
            <!--<div class="col-md-5">-->
              <!--<%= image_tag 'http://via.placeholder.com/400x450', class: 'img img-responsive' %>-->
            <!--</div>-->
          <!--</div>-->

          <div class="row">
            <div class="col-xs-12 jumbotron-padding">
              <h1>
                <strong>The b2b Meeting Marketplace</strong>
              </h1>
            </div>
            <div class="col-xs-4 col-xs-offset-4">
              <p>
                <strong>
                  Companies with the best products will pay for immediate attention.
                </strong>
              </p>
            </div>
          </div>

        </div>

        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-0 col-xs-10 col-xs-offset-1">
          <div class="well signup-well">

            <h2>
              <strong>Registration</strong>
            </h2>
            <span class="text-center">
              <%= link_to image_tag('linkedin-login.png', class: 'img'),
                          user_linkedin_omniauth_authorize_path, id: 'linkedin-login' %>
            </span>
            <h4>OR</h4>
            <hr/>
            <div class="col-xs-10 col-xs-offset-1">
              <%= simple_form_for @user, url: user_registration_path, html: {class: 'form-horizontal'},
                                  wrapper: :horizontal_form do |f| %>


                  <div class="form-group form-group-sm">
                    <%= f.input_field :email, class: 'form-control', label: false, placeholder: 'Email' %>
                  </div>
                  <div class="form-group form-group-sm">
                    <%= f.input_field :first_name, class: 'form-control', label: false, placeholder: 'First Name' %>
                  </div>
                  <div class="form-group form-group-sm">
                    <%= f.input_field :last_name, class: 'form-control', label: false, placeholder: 'Last Name' %>
                  </div>
                  <div class="form-group form-group-sm">
                    <%= f.input_field :title, class: 'form-control', label: false, placeholder: 'Job Title' %>
                  </div>
                  <div class="form-group form-group-sm">
                    <%= f.input_field :company_name, class: 'form-control', label: false, placeholder: 'Company' %>
                  </div>
                  <div class="form-group form-group-sm">
                    <%= f.input_field :password, class: 'form-control', label: false, placeholder: 'Password' %>
                  </div>


                  <%= f.submit 'Register Now', class: 'btn btn-primary center-block' %>

                  <small>
                    By registering, you agree to our
                    <%= link_to('terms of service', terms_of_service_path, target: '_blank') %> and
                    <%= link_to('privacy policy', privacy_policy_path, target: '_blank') %>.
                  </small>

              <% end %>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
  <!--promo-->


  <!--<div class="row seen-in-row">-->
