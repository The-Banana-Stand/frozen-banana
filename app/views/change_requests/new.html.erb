<h1 class="text-center">Request Change to Meeting ID: <%= @meeting.id %></h1>


<div class="col-md-6 col-md-offset-3">
  <%= simple_form_for @change_request do |f| %>
      <%= f.input :user_id, as: :hidden %>
      <%= f.input :meeting_id, as: :hidden %>
      <%= f.input :request, placeholder: 'Tell us what you need changed.' %>
      <%= f.submit 'Create Change Request', class: 'btn btn-primary' %>
  <% end %>
</div>


