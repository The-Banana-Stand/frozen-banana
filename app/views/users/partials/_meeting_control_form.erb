<% submit_button = false if local_assigns[:submit_button].nil? %>
<div class="panel panel-default setting-box">
  <div class="panel-heading">
    <h3 class="panel-title">
      Meeting Controls
      <span class="pull-right"> <%= f.submit 'Save', class: 'btn btn-primary btn' if submit_button %></span>
    </h3>
    <div class="clearfix"></div>
  </div>
  <div class="panel-body">

    <div class="form-group">
      <%= f.association :meeting_queue do |qf| %>
          <%= qf.input :meeting_frequency, as: :select, collection: MeetingQueue.meeting_frequencies.keys, include_blank: false, label: false, class: 'form-control' %>
      <% end %>
    </div>

    <div class="form-group">
      <h5>Meet Now Price</h5>

      <div class="input-group">
        <span class="input-group-addon">$</span>
        <%= f.input :price, label: false, class: 'form-control' %>
      </div>

    </div>
  </div>

</div>