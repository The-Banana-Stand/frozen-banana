

    <div class="col-md-offset-2">
      <%= f.input :role, as: :radio_buttons, collection: [['Decision Maker', 'dm'] ,['Sales Person', 'sp'],
                                                          ['Both Decision Maker and Sales Person', 'both']] %>
    </div>


    <hr/>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.input :email, class: 'form-control', placeholder: 'Email Address' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.input :password, class: 'form-control', placeholder: 'Password' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.input :password_confirmation, class: 'form-control', placeholder: 'Confirm Password', label: 'Password Confirmation' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.input :username, class: 'form-control', placeholder: 'User Name', label: 'User Name' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.input :first_name, class: 'form-control', placeholder: 'First Name', label: 'First Name' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.input :last_name, class: 'form-control', placeholder: 'Last Name', label: 'Last Name' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.input :title, class: 'form-control', placeholder: 'Job Title', label: 'Title' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.input :phone_number, class: 'form-control', placeholder: 'Phone Number', label: 'Phone Number' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.input :company_name, class: 'form-control', placeholder: 'Company Name', label: 'Company Name' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.input :company_address, class: 'form-control', placeholder: 'Company Address', label: 'Company Address' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.input :city, class: 'form-control', placeholder: 'City' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12 col-sm-offset-2">
        <div class="col-sm-5">
          <%= f.input :state, collection: us_states, prompt: 'State', class: 'form-control', wrapper_html: {style: 'display:inline-block'} %>
        </div>
        <div class="col-sm-4">
          <%= f.input :zip_code, class: 'form-control', placeholder: 'Zip Code', label: 'Zip Code', wrapper_html: {style: 'display:inline-block'} %>
        </div>


      </div>

    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.input :avatar, class: 'form-control', as: :file, label: 'Profile Picture'%>
      </div>
    </div>

