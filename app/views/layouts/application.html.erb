<!DOCTYPE html>
<html>
  <head>
    <title>MeetingSlice</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag :modernizr %>
  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Meeting Slice', root_path(no_redirect: true), class: 'navbar-brand' %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <%- if logged_in? %>
            <ul class="nav navbar-nav">
              <li><%= link_to 'Schedule Time', schedule_time_path %></li>
              <li><%= link_to 'My Dashboard', dashboard_path %></li>
              <li><%= link_to 'Invite', new_invite_path %></li>
            </ul>
          <% end %>

          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Help & Contact', help_path %></li>
            <%- if logged_in? %>
                <li><%= image_tag current_user.avatar.url(:thumb), class: 'img-circle' %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.full_name %> <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Edit Info', edit_profile_path %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to 'Log Out', logout_path,  method: 'delete' %></li>
                </ul>
              </li>
            <% else %>
                <li><%= link_to 'Register', signup_path %></li>
                <li><%= link_to 'Log In', login_path %></li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>


    <div class="container">

    <% flash.each do |message_type, message| %>
        <div id="flash" class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>

      <%= yield %>

    </div>

  </body>

</html>
